
@model Work_01.Models.ViewModels.EmployeeViewModels
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <Div class="col-md-12">

        @using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h2 class="display-4">Update Employee</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(x => x.EmployeeId)
            @Html.HiddenFor(x => x.Image)


            <div class="row mb-2">
                @Html.LabelFor(x => x.EmployeeName, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control form-control" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-2">
                @Html.LabelFor(x => x.Gender, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Gender, new { @class = "form-control form-control" })
                </div>

                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Gender, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-2">
                @Html.LabelFor(x => x.JoinDate, new { @class = "col-form-label col-form-label-sm col-2 r" })

                <div class="col-6">
                    @Html.EditorFor(model => model.JoinDate, new { htmlAttributes = new { @class = "form-control", placeholder = "Join Date", Type = "date" } })

                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.JoinDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-2">
                @Html.LabelFor(x => x.Designation, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Designation, new { @class = "form-control form-control" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Designation, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row mb-2">
                @Html.LabelFor(x => x.Status, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Status, new { @class = "form-control form-control" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Status, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-2">
                @Html.LabelFor(x => x.DepartmentId, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.DropDownListFor(x => x.DepartmentId, ViewBag.employee as SelectList, "----Select-----", new { @class = "form-control form-control" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.DepartmentId, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row mb-2">
                @Html.LabelFor(x => x.Address, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control form-control" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="row mb-2">
                @Html.LabelFor(x => x.Email, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>

            </div>


            <div class="row mb-2">
                @Html.LabelFor(x => x.Phone, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control form-control" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                </div>

            </div>


            <div class="row mb-2">
                @Html.LabelFor(x => x.SalaryAmmount, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.SalaryAmmount, new { @class = "form-control form-control" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.SalaryAmmount, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row mb-2">
                @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-form-label-sm col-2 r" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Picture, new { @class = "form-control form-control", type = "file" })
                    @*<img src="@Url.Content(EmployeeViewModels.Picture)" width="50" height="50" />*@
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger" })

                </div>

            </div>
            <div class="row mb-2">
                <div class="col-10 offset-2">
                    <button type="submit" class="btn btn-primary btn-sm">Update</button>
                </div>
            </div>
        }

    </Div>
    <div class="d-flex justify-content-start">
        <a href="@Url.Action("Index","Employee")" class="btn btn-link btn-sm mb-2"><i class="bi bi-arrow-left"></i> Back to list</a>
    </div>

</div>



