@model Work_01.Models.ViewModels.LoginVM
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col">
        <h2 class="alert alert-success">Login here......</h2>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="row mb-2">
                @Html.LabelFor(x => x.Username, new { @class = "col-form-label col-2" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control r" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                @Html.LabelFor(x => x.Password, new { @class = "col-form-label col-2" })
                <div class="col-6">
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control r", type = "password" })
                </div>
                <div class="col-4">
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-auto">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="autoSizingCheck">
                    <label class="form-check-label fw-bold" for="autoSizingCheck">
                        Remember me
                    </label>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-10 offset-2 mt-2">
                    <button type="submit" class="btn btn-primary w-25">Login</button>
                    <p class="mt-2">
                        If you have no account, you can Sign Up!!
                        @Html.ActionLink("Click Here..", "Register")
                    </p>
                </div>
            </div>
        }
    </div>
</div>





