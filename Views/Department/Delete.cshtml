
@model Work_01.Models.Department
@{
    ViewBag.Title = "Delete";
}
<div class="row">
    <div class="col">
        <h2 class="alert alert-warning">Delete Department</h2>
        <h3>Are you sure you want to delete this?</h3>
        <div class="col-md-12">
            @using (Html.BeginForm("Delete", "Department", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()

                <div class="row mb-2">
                    @Html.LabelFor(x => x.DepartmentId, new { @class = "col-form-label col-form-label-sm col-2 r" })
                </div>
                <div class="col-10">
                    @Html.DisplayFor(x => x.DepartmentId, new { @class = "form-control form-control-sm" })
                </div>

                <div class="row mb-2">
                        @Html.LabelFor(x => x.DepartmentName, new { @class = "col-form-label col-form-label-sm col-2 r" })
                    </div>
                    <div class="col-10">
                        @Html.DisplayFor(x => x.DepartmentName, new{ @class = "form-control form-control-sm"})
                    </div>

                <div class="row mb-2">
                    <div class="col-10 offset-2">
                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    </div>
                </div>
            }

        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-start">
            <a href="@Url.Action("Index","Department")" class="card-link"><i class="fa fa-arrow-left"></i>Back to the list</a>
        </div>
    </div>

</div>             