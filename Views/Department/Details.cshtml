
@model Work_01.Models.Department
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col">
        <h2 class="alert alert-success">Department Info</h2>
        
        <div class="col-md-12">
            @using (Html.BeginForm("Details", "Department", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()

                <div class="row mb-2">
                    @Html.LabelFor(x => x.DepartmentId, new { @class = "col-form-label col-form-label-sm col-2 r" })
                </div>
                <div class="col-10">
                    @Html.DisplayFor(x => x.DepartmentId, new { @class = "form-control form-control-sm" })
                </div>

                <div class="row mb-2">
                    @Html.LabelFor(x => x.DepartmentName, new { @class = "col-form-label col-form-label-sm col-2 r" })
                </div>
                <div class="col-10">
                    @Html.DisplayFor(x => x.DepartmentName, new { @class = "form-control form-control-sm" })
                </div>

                @*<div class="row mb-2">
                    <div class="col-10 offset-2">
                        <button type="submit" class="btn btn-outline-primary">Save</button>
                    </div>
                </div>*@
            }

        </div>
    </div>
    <div class="row">

        <div class="d-flex justify-content-start">

            <a href="@Url.Action("Index","Department",new { id = Model.DepartmentId })" class="card-link"><i class="fa fa-arrow-left"></i>Back to the list</a>
            <a href="@Url.Action("Edit","Department",new { id = Model.DepartmentId })" class="card-link col-2">Edit</a>

        </div>
       
    </div>
    </div>















