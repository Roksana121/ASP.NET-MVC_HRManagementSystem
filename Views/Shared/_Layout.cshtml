<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Page.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.3/font/bootstrap-icons.min.css" />
    <link href="~/Content/Style.css" rel="stylesheet" />



    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-md fixed-top border-bottom fw-bold">
        <div class="container-fluid">
            <a href="/" class="navbar-brand">
                <img src="~/Images/tech.jpg" style="width:40px;height:40px;" />
              
            </a>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav">

                    <li>@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Employee", "Index", "Employee", new { }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Department", "Index", "Department", new { }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Administrator", "Index", "Administrator", new { }, new { @class = "nav-link" })</li>
                </ul>
                <ul class="nav navbar-nav ms-auto">
                    @if (Request.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Hello, " + User.Identity.Name + " !", "Index", "", new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Logout", "Logout", "Account", new { }, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="active">
                            @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "nav-link" })
                        </li>
                        <li class="active">
                            @Html.ActionLink("Login", "LOgin", "Account", new { }, new { @class = "nav-link" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="container-fluid text-center fw-bold">
        <p>&copy;@DateTime.Now.Year-www.next-one technology.com</p>
    </footer>
    @RenderSection("scripts", false)
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>
